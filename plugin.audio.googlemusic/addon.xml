    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="xbmc.addon" version="12.0.0"/>
    <import addon="plugin.video.youtube" version="5.1.1" optional="true"/>
    <import addon="script.module.decorator" version="3.4.0"/>
    <import addon="script.module.requests" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Experimental Google Play Music audio plugin</summary>
    <description lang="en">Plugin that lets you play music from Google Play Music.</description>
